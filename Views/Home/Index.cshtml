<main id="site__main" class="2xl:ml-[--w-side] xl:ml-[--w-side-sm] p-2.5 h-[calc(100vh-var(--m-top))] mt-[--m-top]">
    <div id="js-oversized" class="lg:flex 2xl:gap-16 gap-12 max-w-[1065px] mx-auto">
        <div class="max-w-[680px] mx-auto">
            @* Stories *@
            <div class="mb-8">
                <h3 class="font-extrabold text-2xl text-white hidden">Stories</h3>
                <div class="relative" tabindex="-1" uk-slider="auto play: true; finite: true" uk-lightbox="">
                    <div class="py-5 uk-slider-container">
                        <ul class="uk-slider-items w-[calc(100%+14px)]" uk-scrollspy="target: > li; cls: uk-animation-scale-up; delay: 20; repeat: true">
                            <li class="md:pr-3 cursor-pointer" uk-scrollspy-class="uk-animation-fade">
                                <div class="md\:w-16 md\:h-16 w-12 h-12 rounded-full relative border-2 border-dashed grid place-items-center bg-slate-200 border-slate-300 shrink-0 cursor-pointer" uk-toggle="target: #create-story">
                                    <ion-icon name="camera" class="text-2xl" style="color: black"></ion-icon>
                                </div>
                            </li>
                            <li class="md:pr-3 pr-2 hover:scale-[1.15] hover:-rotate-2 duration-300">
                                <a href="~/images/user-profile.svg">
                                    <div class="md:w-16 md:h-16 w-12 h-12 relative md\:border-4 border-2 shadow border-white rounded-full overflow-hidden bg-white">
                                        <img src="~/images/user-profile.svg" />
                                    </div>
                                </a>
                            </li>
                            <li class="md:pr-3 pr-2 hover:scale-[1.15] hover:-rotate-2 duration-300">
                                <a href="~/images/user-profile.svg">
                                    <div class="md:w-16 md:h-16 w-12 h-12 relative md\:border-4 border-2 shadow border-white rounded-full overflow-hidden bg-white">
                                        <img src="~/images/user-profile.svg" />
                                    </div>
                                </a>
                            </li>
                            <li class="md:pr-3 pr-2 hover:scale-[1.15] hover:-rotate-2 duration-300">
                                <a href="~/images/user-profile.svg">
                                    <div class="md:w-16 md:h-16 w-12 h-12 relative md\:border-4 border-2 shadow border-white rounded-full overflow-hidden bg-white">
                                        <img src="~/images/user-profile.svg" />
                                    </div>
                                </a>
                            </li>
                            <li class="md:pr-3 pr-2">
                                <div class="md:w-16 md:h-16 w-12 h-12 bg-slate-200/60 rounded-full animate-pulse"></div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="md:max-w-[580px] mx-auto flex-1 xl:space-y-6 space-y-3">
                <div class="bg-white rounded-xl shadow-sm md:p-4 p-2 space-y-4 text-sm font-medium border1">
                    <div class="flex items-center md:gap-3 gap-1">
                        <div class="flex-1 bg-slate-100 hover:bg-opacity-80 transition-all rounded-lg cursor-pointer text-black" uk-toggle="target: #create-status">
                            <div class="py-2.5 text-center">What did you have in mind?</div>
                        </div>
                        <div class="cursor-pointer hover:bg-opacity-80 p-1 px-1.5 rounded-xl transition-all bg-pink-100/600 hover:bg-pink-100 " uk-toggle="target: #create-status">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 stroke-pink-600 fill-pink-200/70" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                <path d="M15 8h.01" />
                                <path d="M12 3c7.2 0 9 1.8 9 9s-1.8 9 -9 9s-9 -1.8 -9 -9s1.8 -9 9 -9z" />
                                <path d="M3.5 15.5l4.5 -4.5c.928 -.893 2.072 -.893 3 0l5 5" />
                                <path d="M14 14l1 -1c.928 -.893 2.072 -.893 3 0l2.5 2.5" />
                            </svg>
                        </div>
                    </div>
                </div>

                <div class="bg-white !text-black rounded-xl shadow-sm md:p-4 p-2 space-y-4 text-sm font-medium border1" style="width: 580px">
                    Currently, there are no posts available. Would you like to create the first one?
                </div>
                <div class="bg-white rounded-xl shadow-sm text-sm font-medium border1">
                    @* Post Heading *@
                    <div class="flex gap-3 sm:p-4 p-2.5 text-sm font-medium">
                        <a>
                            <img src="~/images/user-profile.svg" class="w-9 h-9 rounded-full" />
                        </a>
                        <div class="flex-1">
                            <a>
                                <h4 class="!text-black">Tester McTestface</h4>
                                <div class="text-xs !text-black">1 day ago</div>
                            </a>
                        </div>
                        <div class="-mr-1">
                            <button type="button" class="button-icon w-8 w-8">
                                <ion-icon class="text-xl placeholder:!text-black !text-black" name="ellipsis-horizontal"></ion-icon>
                            </button>
                            <div class="w-[245px]" uk-dropdown="pos: bottom-right; animation: uk-animation-scale-up uk-transform-origin-top-right; animate-out: truemode: click">
                                <form>
                                    <button type="submit" class="hover\:bg-red-50 icon-link">
                                        <ion-icon class="text-xl shrink-0" name="flag-outline"></ion-icon> Report
                                    </button>
                                </form>
                                <hr />
                                <form>
                                    <button type="submit" class="hover\:bg-red-50 icon-link">
                                        <ion-icon class="text-xl" name="lock-closed-outline"></ion-icon> Set as private
                                    </button>
                                </form>
                                <hr />
                                <form>
                                    <button type="submit" class="hover\:bg-red-50 icon-link">
                                        <ion-icon class="text-xl" name="trash-bin-outline"></ion-icon> Delete post
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                    @* Post Content *@
                    <a>
                        <div class="sm:px-4 p-2.5 pt-0 w-full">
                            <p class="font-normal !text-black">
                                Some content
                            </p>
                        </div>
                    </a>
                    @* Icons *@
                    <div class="sm:p-4 p-2.5 flex items-center gap-4 text-xs font-semibold">
                        <div class="flex items-center gap-2.5 ">
                            <form>
                                <button type="submit" class="button-icon like-button text-red-500 bg-red-100">
                                    <ion-icon class="text-lg" name="heart-outline"></ion-icon>
                                </button>
                            </form>
                            <a href="#">3</a>
                        </div>
                        <div lcass="flex items-center gap-3">
                            <a class="button-icon">
                                <ion-icon class="text-lg" name="chatbubble-ellipses-outline"></ion-icon>
                            </a>
                            <a href="#">4</a>
                        </div>
                        <div class="ml-auto"></div>
                        <div class="flex-items-center gap-2">
                            <form>
                                <button type="submit" class="button-icon favorite-button ml-auto text-orange-500 bt-orange-100">
                                    <ion-icon class="text-lg" name="bookmark-outline"></ion-icon>
                                </button>
                            </form>
                            <a href="#">2</a>
                        </div>
                    </div>
                    @* Comments *@
                    <div>
                        <div class="p-2.5 border-t border-gray-100 font-normal space-y-3 relative">
                            <div class="flex items-styart gap-3 relative">
                                <a>
                                    <img src="~/images/user-profile.svg" class="w-6 h-6 mt-1 rounded-full" />
                                </a>
                                <div class="flex-1">
                                    <div class="flex justify-content-between">
                                        <a class="text-black font-medium inline-block flex-grow">
                                            Tester McTestface
                                        </a>
                                        <small class="!text-black">1 hour ago</small>
                                    </div>
                                    <div class="flex items-center justify-between">
                                        <p class="mt-0.5 !text-black">
                                            This is amazing!
                                        </p>
                                        <form class="remove-comment-form">
                                            <button type="submit" class="text-red-500 text-xs ml-2" title="Remove post comment">
                                                <ion-icon name="trash-outline"></ion-icon>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="p-1.5">
                                <a class="!text-black">
                                    Show all comments
                                </a>
                            </div>
                        </div>
                        <form class="add-comment-form">
                            <div class="sm:px-4 sm:py-3 border-t border-gray-100 flex items-center gap-1">
                                <a>
                                    <img src="~/images/user-profile.svg" class="w-6 h-6 rounded-full" />
                                </a>
                                <div class="flex-1 relative overflow-hidden h-10">
                                    <textarea name="content" placeholder="Add Comment..." rows="1" class="w-full resize-none px-4 py-2 focus:!border-transparent focus:!ring-transparent !text-black"></textarea>
                                </div>
                                <button type="submit" class="!text-black text-sm-rounded-full py-1.5 px-3.5 bg-secondary">Comment</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="flex-1">
            <div class="lg:space-y-4 lg:pb-8 max-lg:grid sm:grid-cols-2 max-lg:gap-6 ">
                <div class="box p-5 px-6">
                    <partial name="Sidebar/_SuggestedConnections"/>
                </div>
                <div class="box p-5 px-6 border1">
                    <partial name="Sidebar/_Trends" />
                </div>
            </div>
        </div>
    </div>
</main>
<partial name="Modals/_CreateStory" />
<partial name="Modals/_CreateStatus" />